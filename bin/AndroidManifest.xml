<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.SettleMe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.second.Splash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.second.AddGroup"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.ADDGROUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name="com.example.second.DataView"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.DATAVIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.EditGroup"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.EDITGROUP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.DeleteGrp"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.DELETEGRP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.MakePayment"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.MAKEPAYMENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.ViewPayment"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.second.VIEWPAYMENT" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        <activity
            android:name="com.example.second.SuccessMsg"
            android:label="@string/app_name"
             android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.second.SUCCESSMSG" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.Preference"
            android:label="@string/app_name"
             android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.second.SETTINGS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.Help"
            android:label="@string/app_name"
             android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.second.HELP" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.second.Credits"
            android:label="@string/app_name"
             android:theme="@android:style/Theme.Dialog" >
            <intent-filter>
                <action android:name="com.second.CREDITS" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>